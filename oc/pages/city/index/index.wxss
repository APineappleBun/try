.container {
  padding-top: 0px;
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  /* background-color: rgb(203, 233, 229); */
}

.item {
  position: relative;
  width: 80%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;  
  padding-bottom: 20px;
  font-size: 25px;
}
.city {
  width: 100%;
  
  /* align-items: left; */
}

.attractionItem {
  width: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
}
.attractionImage {
  width: 100%;
}
.total {
  background-image: var(--cityBG);
  background-repeat:round;
  height: 400px;
  width: 400px;
  position: relative;
  justify-content: center;
  align-items: center;
  vertical-align: center;
}
.city {
  display: flex;
  align-items: center;
  justify-content: center;
}
.totalContent {

  background-color: rgba(255, 255, 255, 0.8);
  height: 250px;
  width: 250px;

  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);

  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.totalText {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.totalProgress {
  padding-top: 5px;
}
.cellWrapper {
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mb-16 {
  /* margin-bottom: 32rpx; */
  width: 100%;
}
