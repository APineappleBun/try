<view class="container">

  <view class="currQuest">
    <text style=" text-align: center; background-color: rgba(255,255,255,0.8);">新任务</text>
    <view class="ads">
      <image class ="img" mode='aspectFit' src="{{baseUrl+quest.image}}"></image>
    </view>

    <view class="accept" style="{{bgStyle}}">
      <image class="acceptButton" mode="heightFix" bindtap="acceptQuest" src="{{baseUrl+'/image/accept_button.png'}}"></image>
    </view>
    
  </view>

  <view class="reward">
    <view class="rewardImage1" wx:if="{{isShow}}">
      <image class ="rewardImg" mode="heightFix" bindtap="hideReward" src="{{baseUrl+reward.image}}"/>
    </view>
    <view class="rewardImage2" wx:else>
      <image class ="rewardImg" mode="heightFix" bindtap="showReward" src="{{baseUrl+'/image/reward_hide.png'}}"/>
    </view>
  </view>



