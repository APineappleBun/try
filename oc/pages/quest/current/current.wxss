}
.attractionText {
  text-align: center;
  font-size: 15px;
  width: 90%;
}
.button {
  width: 25%;
}
.choice {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.time {
  /* font-size: 25px; */
