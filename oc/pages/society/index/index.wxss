.container {

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  background: linear-gradient(rgba(255,255,255,0.5),rgba(255,255,255,0.5)),var(--societyBG);
}
.uCenter {

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 90%;
}
.user {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.chatList {

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 90%;
}
.chatItem {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 80%;
}

.enterButton {
  width: 30px;
}
.enterImg {
  width: 50px;
}
.bg {
  
  height: 100%;
  width: 100%;
  background-color: white;
  opacity: 0.8;
}

.desc {
  padding: 5px;
  border-radius: 10%;
  background: linear-gradient(to right, rgba(55, 180, 252, 0.5),rgba(255,255,255,0.5));
}