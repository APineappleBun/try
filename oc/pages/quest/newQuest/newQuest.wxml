  <view class="map">
    <view class="mapImage">
      <!-- <image style="width: 30%;" mode="widthFix" src="{{baseUrl+'/image/time_icon.png'}}"></image> -->
      <image class="innerImg" mode="widthFix" src="{{baseUrl+quest.map}}"></image>
    </view>
    <view class="mapText">
      <text class="innerText">{{quest.name}}</text>
      <text>\n</text>
      <text>预计时长：{{quest.maxTime}}</text>
      <text>预计路程：{{quest.distance}}km</text>
      <text>任务描述：{{quest.description}}</text>
    </view>
  </view>

  <van-divider />





</view>
