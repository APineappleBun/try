.timer {
  font-size: 25px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.attraction{
  /* position: relative; */
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  justify-content:flex-start;
}
.attractionImage{
  /* position: relative; */
  display: flex;
  align-items: center;
