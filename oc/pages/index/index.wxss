.container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-top: 0;
}
.ads {
  width: 100%;
  /* height: 100%; */
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.index_swiper swiper {
  width: 750rpx;
  height: 375rpx;
}
.index_swiper swiper image {
  width: 100%;
}
.currQuest {
  width: 90%;
  position: relative;
  /* height: 100%;  */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 5px;
}
.img {
  width: 100%;
  height: 100%;
}
.bestTime {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 25px;

}
.time {
  /* font-size: 25px; */
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  padding: 10px;
  background-image: var(--timerBG);
  background-repeat:no-repeat;
  background-size: 100% auto;
}
.bestTime {
  font-size: 15px;
}
.currTime {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}
.ads {
  position: relative;
  height: 100%;
}
.map {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.progress {
  position: relative;
  height: 120px;
  width: 90%;
  display: flex;
  flex-direction: row; 
  align-items: center;
  justify-content: flex-start;
}
.progressImg {
  width: 130px;
}
.progressBar {
  width: 90%;
}

.reward {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
  justify-content:flex-start;
}


.enterButton{
